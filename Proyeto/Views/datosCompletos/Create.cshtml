@model Proyeto.Models.AutorModel

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href='~/css/StyleSheet.css' />
<link rel="stylesheet" href='~/css/footer.css' />


<h1>Create</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre</label>
                <input asp-for="Nombre" class="form-control"  type="text" placeholder="Daniel"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApePaterno" class="control-label">Apellido Paterno</label>
                <input asp-for="ApePaterno" class="form-control"  type="text" placeholder="Parra"/>
                <span asp-validation-for="ApePaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApeMaterno" class="control-label">Apellido Materno</label>
                <input asp-for="ApeMaterno" class="form-control" type="text" placeholder="Carrillo" />
                <span asp-validation-for="ApeMaterno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label">Matricula</label>
                <input asp-for="Matricula" class="form-control" type='number' placeholder="1915415" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumEmpleado" class="control-label">Numero de Empleado</label>
                <input asp-for="NumEmpleado" class="form-control" type="number"  />
                <span asp-validation-for="NumEmpleado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCuenta" class="control-label">Tipo de cuenta</label>
                <input asp-for="TipoCuenta" class="form-control" />
                <span asp-validation-for="TipoCuenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumTelefono" class="control-label">Numero de celular</label>
                <input asp-for="NumTelefono" class="form-control" type='tel' placeholder="6445151545" />
                <span asp-validation-for="NumTelefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaNaci" class="control-label">Fecha de nacimiento</label>
                <input asp-for="FechaNaci" class="form-control"  type="date" placeholder="03-05-2005"/>
                <span asp-validation-for="FechaNaci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CuerpoAcademico" class="control-label">Cuerpo academico</label>
                <input asp-for="CuerpoAcademico" class="form-control"  />
                <span asp-validation-for="CuerpoAcademico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaEstudios" class="control-label">Area de estudios</label>
                <input asp-for="AreaEstudios" class="form-control" />
                <span asp-validation-for="AreaEstudios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNivelEstudios1" class="control-label">Nivel de estudios</label>
                <select asp-for="IdNivelEstudios1" class ="form-control" asp-items="ViewBag.IdNivelEstudios1"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
